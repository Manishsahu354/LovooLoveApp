<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".FourthActivityDOB">


    <TextView
        android:id="@+id/TvBirthdayDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:drawableStart="@drawable/ic_one_dot"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableEnd="@drawable/ic_birthday_cake"
        android:drawablePadding="2.5dp"
        app:layout_constraintStart_toStartOf="parent"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    app:layout_constraintStart_toStartOf="@id/TvBirthdayDot"
    app:layout_constraintTop_toTopOf="parent"
    android:drawableStart="@drawable/ic_three_dot"
    android:layout_marginStart="45dp"
    />

    <TextView
        android:id="@+id/YourBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvBirthdayDot"
        android:text="When is your birthday?"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
<EditText
    android:id="@+id/etDD"
    android:layout_width="80dp"
    android:layout_height="60dp"
    app:layout_constraintTop_toBottomOf="@id/YourBirthday"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="30dp"
    android:layout_marginTop="30dp"
    android:gravity="center"
    app:layout_constraintEnd_toStartOf="@id/etMM"
    android:textColorHint="@color/black"
    android:textSize="18sp"
    android:background="@drawable/rectangle_dd"
    android:hint="DD"/>

    <EditText
        android:id="@+id/etMM"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/YourBirthday"
        app:layout_constraintStart_toEndOf="@id/etDD"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/etYYYY"
        android:textColorHint="@color/white"

        android:textSize="18sp"
        android:background="@drawable/rectangle_mm_yyyy"
        android:hint="MM"/>

    <EditText
        android:id="@+id/etYYYY"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/YourBirthday"
        app:layout_constraintStart_toEndOf="@id/etMM"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/white"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/rectangle_mm_yyyy"
        android:hint="YYYY"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDD"
        android:text="So,when is the party?"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btnBack_01"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/btnForward_01"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="30dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
        android:layout_height="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>