<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdround"
    tools:context=".SixthActivity">

    <TextView
        android:id="@+id/TvLookingFirstDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:drawableStart="@drawable/ic_one_dot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/TvLookingSecondDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:drawableStart="@drawable/ic_one_dot"
        android:drawableEnd="@drawable/ic_one_dot"
        android:drawablePadding="2.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/TvLookingFirstDot"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="@id/TvLookingSecondDot"
       app:layout_constraintTop_toTopOf="parent"
       android:drawableStart="@drawable/ic_like"
       android:layout_marginStart="@dimen/dp_30"
       android:drawableEnd="@drawable/ic_one_dot_bgcolor"
       android:drawablePadding="2dp"
       android:layout_marginTop="@dimen/dp_30"/>
    <TextView
        android:id="@+id/tvWhatAreYouLooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/what_are_really_looking"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvLookingFirstDot"
        android:layout_marginEnd="@dimen/dp_30"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_30"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnSomething"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/fifth_rectangle"
        android:text="@string/something_serious"
        android:layout_marginStart="@dimen/dp_25"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWhatAreYouLooking"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/dp_20"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"

        />
    <Button
        android:id="@+id/btnNewFriends"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/fifth_rectangle"
        android:text="@string/new_friends"
        android:textSize="24dp"

        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btnSomething"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_25"
     />
    <Button
        android:id="@+id/btnLetsSeeWhatHappen"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/fifth_rectangle"
        android:text="Let's see what happens"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNewFriends"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:layout_marginStart="@dimen/dp_25"


        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnSomethingCasual"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/fifth_rectangle"
        android:text="@string/somethig_casual"
        android:textSize="24dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnLetsSeeWhatHappen"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_25"

        />
    <Button
        android:id="@+id/btnBackLooking"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/btnForwardLooking"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="30dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
        android:layout_height="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>