<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdround"
    tools:context=".SecondPageActivity">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/ic_hearts__1_"
        app:layout_constraintBottom_toTopOf="@+id/tvfinding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:text="Let's go"
        android:gravity="center"
        android:textSize="@dimen/dp_25"
        app:layout_constraintTop_toBottomOf="@+id/tvfinding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:textColor="@color/light_blue"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="546dp" />

    <TextView
        android:id="@+id/tvfinding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_380"
        android:gravity="center"
        android:text="@string/finding"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:textSize="@dimen/dp_25"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="28dp" />
</androidx.constraintlayout.widget.ConstraintLayout>