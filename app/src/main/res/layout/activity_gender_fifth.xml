<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_main_background"
    tools:context=".GenderFifthActivity">

    <TextView
        android:id="@+id/tvYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are..?"
        android:layout_marginTop="65dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btnFemale"
        android:layout_width="150dp"
        android:text="Female"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvYou"
        android:background="@drawable/rectangle_male_female"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/btnMale"
        android:layout_width="150dp"
        android:text="Male"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvYou"
        android:background="@drawable/rectangle_male_female"
        android:layout_marginEnd="30dp"
    app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/btnBack_01"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/btnForward_01"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="30dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
        android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>