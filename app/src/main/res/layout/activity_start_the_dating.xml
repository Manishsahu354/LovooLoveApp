<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle_main_background"
    android:layout_height="match_parent"
    tools:context=".StartTheDating">
    <ImageView
        android:id="@+id/idating"
        android:layout_width="match_parent"
        android:src="@drawable/dating"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btnStartDating"
        app:layout_constraintTop_toBottomOf="@id/tvStartDatingLogo"
        />
    <Button
        android:id="@+id/btnStartDating"
        android:layout_width="match_parent"
        android:text="Start the dating"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle_button_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvStartDatingLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="LOVOO"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_heart"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>