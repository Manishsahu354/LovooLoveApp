<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_main_background"
    tools:context=".SevenInterestedActivity">

    <TextView
        android:id="@+id/tvInterestedFourDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_four_dots_whitecolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:drawableEnd="@drawable/ic_gender"
        android:drawablePadding="2dp"/>
    <TextView
        android:id="@+id/tvInterested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who are you interested in?"
        android:layout_marginTop="@dimen/dp_15"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="@dimen/dp_30"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInterestedFourDot" />
    <Button
        android:id="@+id/btnWomen"
        android:layout_width="wrap_content"
        android:text="Women"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvInterested"
        android:background="@drawable/rectangle_male_female"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnMen"
        android:layout_width="wrap_content"
        android:text="Men"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvInterested"
        android:background="@drawable/rectangle_male_female"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnEveryone"
        android:layout_width="wrap_content"
        android:text="Everyone"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btnWomen"
        android:background="@drawable/rectangle_male_female"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnBackInterested"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/btnForwardInterested"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="30dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
        android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>